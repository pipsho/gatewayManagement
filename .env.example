# IoT Gateway Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DB_PATH=./gateway.db

# Security Settings
SESSION_TIMEOUT=86400
PASSWORD_MIN_LENGTH=8

# Network Settings
DEFAULT_INTERFACE=eth0
DNS_SERVERS=8.8.8.8,8.8.4.4

# ZeroTier Settings (optional)
ZEROTIER_ENABLED=true
ZEROTIER_PATH=/usr/bin/zerotier-cli

# Logging Settings
LOG_LEVEL=info
MAX_LOG_ENTRIES=1000

# Development Settings (do not use in production)
DEBUG=false
CORS_ORIGIN=*